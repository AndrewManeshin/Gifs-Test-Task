<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gif_card_height"
    app:cardCornerRadius="@dimen/gif_card_corner_radius"
    app:cardElevation="@dimen/gif_card_elevation"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gif_image_height"
        android:layout_gravity="center"
        android:contentDescription="@string/gif_description"
        tools:src="@tools:sample/backgrounds/scenic" />

</androidx.cardview.widget.CardView>